    <style name="Theme.PayRoll" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        
        <item name="colorPrimary">@color/purple_500</item>
        <item name="android:ambientShadowAlpha">1</item>
        <item name="android:spotShadowAlpha">1</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_500</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor" ns1:targetApi="l">?attr/colorPrimaryVariant</item>
        
    </style>
    <style name="ThemeOverlay.AppCompat.DayNight" parent="ThemeOverlay.AppCompat.Dark"/>
    <style name="ThemeOverlay.Material3.DynamicColors.DayNight" parent="ThemeOverlay.Material3.DynamicColors.Dark"/>
    <style name="ThemeOverlay.SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textColor">#212121</item>
        <item name="android:textColorHint">#9E9E9E</item>
        <item name="android:queryBackground" ns1:targetApi="lollipop">@color/purple_500</item>
        <item name="android:editTextColor">@color/purple_500</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:tint">#9E9E9E</item>

    </style>
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/montserrat_regular</item>

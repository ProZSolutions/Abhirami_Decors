<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rectiangle_padding"
    android:backgroundTint="@color/white"
    android:layout_gravity="center"
    android:gravity="center"

    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="right"
            android:id="@+id/back_arrow"
            android:layout_marginLeft="10dp"
            android:src="@drawable/close_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/skipp_laypput"
                android:visibility="gone"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:text="Skip"
                android:textSize="15dp"
                android:textColor="@color/n_org"
                android:padding="8dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:id="@+id/projectnameRL"
                android:layout_marginTop="5dp"
                 android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/cal"
                    android:layout_marginLeft="4dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/calendar_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:layout_toRightOf="@id/cal"
                    android:id="@+id/date"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    android:hint="Payment Date"
                    android:padding="8dp" />

            </RelativeLayout>
            <View
                android:background="@color/n_outer"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/oth_layout"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="15dp"
                    android:textSize="15dp"
                    android:text="Other Project *"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/edt_others"
                    android:hint="Work"
                    android:lines="3"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:textColorHint="@color/gray"
                    android:paddingTop="7dp"
                    android:paddingLeft="3dp"
                    android:paddingBottom="7dp"
                    android:layout_marginRight="10dp"
                    android:paddingRight="7dp"
                    android:textSize="14dp"
                    android:background="@drawable/rectangle_border"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/gray_dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/planned_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="15dp"
                     android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:background="@null"
                        android:id="@+id/desc"
                        android:hint="Description"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:textColorHint="@color/gray"
                        android:paddingTop="7dp"
                        android:paddingLeft="3dp"
                        android:lines="5"
                        android:paddingBottom="7dp"
                        android:layout_marginRight="10dp"
                        android:paddingRight="7dp"
                        android:textSize="14dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/gray_dark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <View
                    android:background="@color/n_outer"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/approve"
                    android:layout_alignParentRight="true"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:backgroundTint="@color/green"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/rectangle_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        app:tint="@color/white"
                        android:src="@drawable/approve_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:text="Approve"
                        android:layout_marginLeft="5dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="5dp"
                        android:textSize="14dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <com.tuyenmonkey.mkloader.MKLoader
                android:layout_centerInParent="true"
                android:id="@+id/loader"
                android:layout_width="60dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_height="60dp"
                app:mk_type="Whirlpool"
                app:mk_color="@color/n_org"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/first_letter"
        android:text="A"
        android:textAllCaps="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="4dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/gray"
        android:textSize="15dp" />
    <RelativeLayout
        android:layout_below="@id/first_letter"
        android:id="@+id/relativeLayout"
        android:background="@drawable/rectangle_outer_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:padding="2dp">


        <LinearLayout
            android:layout_toLeftOf="@id/back_arrow"
             android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1.7"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/name"
                            android:text="Anbu"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:padding="4dp"
                            android:fontFamily="@font/inter_18pt_semibold"
                            android:textColor="@color/black"
                            android:textSize="14.5dp" />
                        <TextView
                            android:id="@+id/time"
                            android:text=""
                            android:drawablePadding="6dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            app:drawableTint="@color/n_org"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:drawableLeft="@drawable/overtime_icon"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:padding="2dp"
                            android:fontFamily="@font/inter_18pt_semibold"
                            android:textColor="@color/black"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/emp_id"
                            android:text="Anbu"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:padding="4dp"
                            android:fontFamily="@font/inter_18pt_semibold"
                            android:textColor="@color/n_org"
                            android:textSize="12dp" />
                        <TextView
                            android:id="@+id/mobile"
                            android:text="Anbu"
                            app:drawableTint="@color/n_org"
                            android:drawablePadding="6dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:drawableLeft="@drawable/contact_icon_left_icon"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:padding="4dp"
                            android:fontFamily="@font/inter_18pt_semibold"
                            android:textColor="@color/black"
                            android:textSize="13dp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:rotation="180"
            android:src="@drawable/pbackarrow"
            app:tint="@color/n_org" />
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/n_blue"
    android:layout_height="match_parent">
    <include
        android:id="@+id/linear"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/new_header_layout"/>


    <ScrollView
        android:layout_above="@+id/bottom_nv"
        android:layout_below="@id/linear"
        android:backgroundTint="@color/n_bg"
        android:background="@drawable/rect_top_only"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/gray"
                 android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:fontFamily="@font/inter_18pt_medium"
                android:layout_marginTop="10dp"
                android:id="@+id/versioncode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/inter_18pt_semibold"
                android:textSize="23dp"
                android:textStyle="bold"
                android:id="@+id/header"
                android:text="The Foundation of \nInnovation"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/inter_18pt_medium"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:justificationMode="inter_word"                 android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/header_1"
                android:textSize="14dp"
                android:textColor="@color/gray_dark"
                android:lineSpacingExtra="3.4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <ImageView
                android:src="@drawable/header_icon_2"
                android:scaleType="center"
                android:layout_marginTop="-130dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="450dp"/>
            <TextView
                android:fontFamily="@font/inter_18pt_semibold"
                android:textSize="23dp"
                android:text="Our Vision"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/inter_18pt_medium"
                android:textColor="@color/gray_dark"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:justificationMode="inter_word"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/header_2"
                android:textSize="14dp"
                android:lineSpacingExtra="3.4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <ImageView
                android:src="@drawable/header_icon_1"
                android:scaleType="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="350dp"/>
            <TextView
                android:fontFamily="@font/inter_18pt_semibold"
                android:textSize="23dp"
                android:text="Our Mission"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/inter_18pt_medium"
                android:textColor="@color/gray_dark"
                android:layout_marginTop="20dp"
                android:justificationMode="inter_word"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/header_2"
                android:textSize="14dp"
                android:lineSpacingExtra="3.4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <ImageView
                android:src="@drawable/header_icon_3"
                android:scaleType="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="350dp"/>


        </LinearLayout>



    </ScrollView>
    <include
        layout="@layout/new_bottom_layout"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_nv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>
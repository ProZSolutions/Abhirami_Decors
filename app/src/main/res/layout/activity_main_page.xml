<?xml version="1.0" encoding="utf-8"?>
    <com.skyfishjy.library.RippleBackground
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content"
        app:rb_color="@color/shade_2"
        app:rb_radius="30dp"
        android:background="@color/n_org"
        app:rb_rippleAmount="6"
        app:rb_duration="3000"
        app:rb_scale="8">

    <RelativeLayout
        android:id="@+id/outer_layout_3"
        android:layout_width="@dimen/outer_3"
        android:layout_height="@dimen/outer_3"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_3">

        <LinearLayout
            android:layout_width="@dimen/outer_4"
            android:layout_height="@dimen/outer_4"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/outer_logo"
                android:layout_height="@dimen/outer_logo"
                android:layout_gravity="center"
                android:src="@drawable/plogo" />

            <ImageView
                android:layout_width="@dimen/title_width"
                android:layout_height="@dimen/title_height"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ptitle" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_below="@+id/outer_layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/welcome"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:text="Welcome!"
            android:fontFamily="@font/dancing"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:text="APMS"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </com.skyfishjy.library.RippleBackground>


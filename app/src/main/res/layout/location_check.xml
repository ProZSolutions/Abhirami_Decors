<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/close"
            android:src="@drawable/close_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/use_current_location"
            android:layout_marginTop="20dp"
             android:textColor="@color/color_primary"
            android:text="Use Current Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/latitude"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:background="@drawable/rectangle_outer_gray"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="Manual Latitude : 11.3453"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/longitude"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:background="@drawable/rectangle_outer_gray"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:hint="Manual Longitude : 78.3453"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/current_distance"
            android:text=""
            android:textSize="11dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/color_primary"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/submit"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/color_primary"
            android:background="@drawable/rectiangle_padding"
            android:layout_gravity="center"
            android:text="Check Distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/rectangle_padding"
    android:backgroundTint="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/close"
            android:layout_gravity="right"
            app:tint="@color/n_org"
            android:src="@drawable/close_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <LinearLayout
            android:id="@+id/relBranch"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="8dp"
            android:orientation="vertical"
            android:background="@drawable/rectangle_padding"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="13dp"
                android:text="DOB"
                android:fontFamily="@font/inter_18pt_medium"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:padding="4dp"
                android:background="@drawable/rectangle_outer_gray"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ed_fromdate"
                    android:focusable="false"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/from_picker"
                    android:fontFamily="@font/inter_18pt_medium"
                    android:hint="Select Date"
                    android:paddingTop="7dp"
                    android:paddingRight="7dp"
                    android:paddingBottom="7dp"
                    android:textColor="@color/gray_dark"
                    android:textColorHint="@color/gray"
                    android:textSize="13dp" />

                <ImageView
                    android:id="@+id/from_picker"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/calendar_icon_new"
                    app:tint="@color/n_blue" />
            </RelativeLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="13dp"
                android:text="Blood Group"
                android:fontFamily="@font/inter_18pt_medium"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/blood_group"
                android:hint="Blood Group"
                android:textColorHint="@color/gray"
                android:paddingTop="7dp"
                android:layout_gravity="start"
                android:gravity="start"
                android:paddingBottom="7dp"
                android:paddingRight="7dp"
                android:paddingLeft="7dp"
                android:textSize="13dp"
                android:lines="1"
                android:background="@drawable/rectangle_outer_gray"
                android:fontFamily="@font/inter_18pt_medium"
                android:textColor="@color/gray_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="13dp"
                android:text="Address"
                android:fontFamily="@font/inter_18pt_medium"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/address"
                android:hint="Address"
                android:textColorHint="@color/gray"
                android:paddingTop="7dp"
                android:layout_gravity="start"
                android:gravity="start"
                android:paddingBottom="7dp"
                android:paddingRight="7dp"
                android:paddingLeft="7dp"
                android:textSize="13dp"
                android:lines="3"
                android:background="@drawable/rectangle_outer_gray"
                android:fontFamily="@font/inter_18pt_medium"
                android:textColor="@color/gray_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="13dp"
                android:text="Pincode"
                android:fontFamily="@font/inter_18pt_medium"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/pincode"
                android:hint="Pincode"
                android:textColorHint="@color/gray"
                android:paddingTop="7dp"
                android:inputType="number"
                android:maxLength="6"
                android:layout_gravity="start"
                android:gravity="start"
                android:paddingBottom="7dp"
                android:paddingRight="7dp"
                android:paddingLeft="7dp"
                android:textSize="13dp"
                android:lines="1"
                android:background="@drawable/rectangle_outer_gray"
                android:fontFamily="@font/inter_18pt_medium"
                android:textColor="@color/gray_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <com.tuyenmonkey.mkloader.MKLoader
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:id="@+id/loader"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:mk_type="Whirlpool"
        app:mk_color="@color/n_org"
        />


         <LinearLayout
             android:id="@+id/approve"

             android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
             android:background="@drawable/rectangle_padding"
             android:backgroundTint="@color/n_green"
             android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                 android:layout_toLeftOf="@id/clear_filters"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                 android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon"
                    app:tint="@color/white"
                    android:src="@drawable/approve_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/btn_title"
                    android:text="Update"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
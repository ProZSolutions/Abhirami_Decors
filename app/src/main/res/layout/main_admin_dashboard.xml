<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/shade_yellow"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/n_org"
        android:layout_width="match_parent"
        android:layout_height="170dp">
        <include layout="@layout/activity_network"/>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginLeft="10dp"
                android:src="@drawable/profile_user_icon"
                android:id="@+id/profile_img"
                android:layout_width="50dp"
                android:layout_height="50dp"></de.hdodenhof.circleimageview.CircleImageView>
            <com.tuyenmonkey.mkloader.MKLoader
                android:layout_centerInParent="true"
                android:id="@+id/loader"
                android:visibility="gone"
                android:layout_toRightOf="@id/profile_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:mk_type="Whirlpool"
                app:mk_color="@color/white"
                />
            <LinearLayout
                android:layout_toRightOf="@id/loader"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name"
                    android:textSize="17dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text=""
                    android:layout_gravity="left"
                    android:textColor="@color/white"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/designation"
                    android:layout_marginTop="4dp"
                    android:textSize="14dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Admin"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/logout"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/logout_sfgn"
                    android:padding="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"></ImageView>
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/alert"
                    android:layout_width="40dp"
                    android:layout_height="40dp"></ImageView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_above="@id/bottomLayout"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:backgroundTint="@color/white"
        android:background="@drawable/padding_overlap"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="115dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/admin_layout"
            android:visibility="gone"
            android:layout_margin="15dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Switch
                android:id="@+id/swOnOff"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Admin"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:fontFamily="@font/roboto_bold"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"
            android:text="Home Screen"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/versioncode"
            android:textSize="12dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/gray"
            android:text="Version Code "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:padding="10dp"
                        android:id="@+id/linear1"
                        android:background="@drawable/dashboarg_bg"

                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="150dp">

                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/admin_icon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"/>
                        <TextView
                            android:fontFamily="@font/roboto_bold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="20dp"
                            android:text="Admin \nSummary"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/linear2"
                        android:background="@drawable/dashboarg_bg"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="150dp">

                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/employee_icon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"/>
                        <TextView
                            android:fontFamily="@font/roboto_bold"

                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="20dp"
                            android:text="Employees "
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/linear3"
                        android:background="@drawable/dashboarg_bg"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="150dp">

                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/dsr_icon"
                            android:layout_width="35dp"
                            android:layout_height="30dp"/>
                        <TextView
                            android:fontFamily="@font/roboto_bold"

                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="20dp"
                            android:text="Device Management "
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/linear4"
                        android:background="@drawable/dashboarg_bg"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="150dp">

                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/approvals_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                        <TextView
                            android:fontFamily="@font/roboto_bold"

                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="20dp"
                            android:text="Approvals"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/linear5"
                        android:background="@drawable/dashboarg_bg"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="150dp">
                        <ImageView
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/normal_top_corner_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/normal_bottom_corner_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/dash3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                        <TextView
                            android:fontFamily="@font/roboto_bold"

                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="20dp"
                            android:text="Reports"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/linear6"
                        android:background="@drawable/dashboarg_bg"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="150dp">
                        <ImageView
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/normal_top_corner_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/normal_bottom_corner_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/meeting_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                        <TextView
                            android:fontFamily="@font/roboto_bold"

                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="20dp"
                            android:text="Meeting"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/bottom_navigation_bar"/>

        <!-- <com.etebarian.meowbottomnavigation.MeowBottomNavigation
             android:layout_width="match_parent"
             android:id="@+id/btm_nav"
             android:layout_gravity="bottom"
             app:mbn_backgroundBottomColor="@color/purple_200"
             app:mbn_circleColor="@color/black"
             app:mbn_selectedIconColor="@color/white"
             app:mbn_defaultIconColor="@color/white"
             android:layout_height="wrap_content"/>
         <View
             android:background="@color/n_org"
             android:layout_width="match_parent"
             android:layout_height="10dp"/>-->
    </LinearLayout>
    <com.tuyenmonkey.mkloader.MKLoader
        android:layout_centerInParent="true"
        android:id="@+id/loader1"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:mk_type="Whirlpool"
        app:mk_color="@color/white"
        />
</RelativeLayout>
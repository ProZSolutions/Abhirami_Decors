<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/rectangle_padding"
    android:backgroundTint="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/close"
            android:layout_gravity="right"
            app:tint="@color/n_org"
            android:src="@drawable/close_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <RelativeLayout
            android:id="@+id/relBranch"
             android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="8dp"
            android:background="@drawable/rectangle_padding"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon1"
                app:tint="@color/n_org"
                android:src="@drawable/branch_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/branchName"
                android:fontFamily="@font/inter_18pt_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_toLeftOf="@id/arr"
                android:layout_toRightOf="@id/icon1"
                android:text="Branch"
                android:textColor="@color/black" />
            <ImageView
                android:id="@+id/arr"
                app:tint="@color/n_blue"
                 android:layout_alignParentRight="true"
                android:rotation="270"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
         </RelativeLayout>
        <LinearLayout
            android:id="@+id/branch_layout"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/branchRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relDept"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="8dp"
            android:background="@drawable/rectangle_padding"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon2"
                app:tint="@color/n_org"
                android:src="@drawable/department_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/departmentName"
                android:layout_width="wrap_content"
                android:fontFamily="@font/inter_18pt_medium"

                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_toLeftOf="@id/arr1"
                android:layout_toRightOf="@id/icon2"
                android:text="Department"
                android:textColor="@color/black" />
            <ImageView
                android:id="@+id/arr1"
                app:tint="@color/n_blue"
                android:layout_alignParentRight="true"
                android:rotation="270"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/dept_layout"
            android:visibility="gone"
             android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dept_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relDate"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
             android:layout_marginLeft="20dp"
            android:padding="8dp"
            android:background="@drawable/rectangle_padding"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon3"
                app:tint="@color/n_org"
                android:src="@drawable/calendar_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:fontFamily="@font/inter_18pt_medium"

                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/icon3"
                android:text="Date Range"
                android:textColor="@color/black" />
            <ImageView
                app:tint="@color/n_blue"
                android:layout_alignParentRight="true"
                android:rotation="270"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
      <!--  <org.naishadhparmar.zcustomcalendar.CustomCalendar
            android:id="@+id/custom_calendar"
            android:visibility="gone"
             android:layout_width="match_parent"
            android:background="@color/n_bg"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"/>-->

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/custom_calendar"
             android:visibility="gone"
             app:mcv_headerTextAppearance="@style/CustomMonthTextStyle"
            app:mcv_weekDayTextAppearance="@style/CustomDayTextStyle"
            android:layout_gravity="center"
            app:mcv_selectionColor="@color/gray_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
             app:mcv_showOtherDates="other_months"
            app:mcv_selectionMode="single"
            android:layout_margin="20dp"

            />
        <LinearLayout
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/clear_filters"
                android:orientation="horizontal"
                android:id="@+id/approve"

                android:backgroundTint="@color/n_green"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rectangle_padding"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon"
                    app:tint="@color/white"
                    android:src="@drawable/approve_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/btn_title"
                    android:text="Apply"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:id="@+id/clear_filters"
                android:layout_toLeftOf="@id/cancel"
                android:backgroundTint="@color/n_org"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/rectangle_padding"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    app:tint="@color/white"
                    android:id="@+id/icon121"
                    android:src="@drawable/cancelled_icon_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:text="Clear All"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dp"
                    android:textSize="14dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:orientation="horizontal"
                android:id="@+id/cancel"
                android:layout_alignParentRight="true"

                android:backgroundTint="@color/n_org"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/rectangle_padding"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    app:tint="@color/white"
                    android:id="@+id/icon12"
                    android:src="@drawable/cancelled_icon_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:text="Cancel"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
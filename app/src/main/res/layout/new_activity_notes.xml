<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/n_blue"
    android:layout_height="match_parent">
    <include
        android:id="@+id/linear"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/new_header_layout"/>


    <LinearLayout
        android:layout_above="@+id/bottom_nv"
        android:layout_below="@id/linear"
        android:backgroundTint="@color/n_bg"
        android:background="@drawable/rect_top_only"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back_arrow"
                android:layout_marginRight="17dp"
                android:src="@drawable/n_leftarrow"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/title"
                android:text="Notes"
                android:textSize="16dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/n_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/search"
                    android:visibility="gone"
                    android:layout_marginRight="17dp"
                    android:src="@drawable/n_search"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <ImageView
                    android:id="@+id/img1"
                    android:visibility="gone"
                    android:src="@drawable/n_filter"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/rectangle_outer_gray"
            android:backgroundTint="@color/n_blue"
            >

            <LinearLayout
                android:padding="5dp"
                android:id="@+id/frame_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/frame_icon"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/add_circle_white"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/frame_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/inter_18pt_semibold"
                    android:gravity="center"
                    android:text="Add Notes"
                    android:textColor="@color/white" />

            </LinearLayout>
        </FrameLayout>
        <!--android:scrollbars="horizontal"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbHorizontal="@drawable/scrollbar"-->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/apply_leave_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/add_layout"
                 android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ScrollView
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/linearfromdate"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:visibility="gone"
                                android:layout_marginTop="20dp"
                                android:textSize="15dp"
                                android:text="Select  Type"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <RelativeLayout
                                android:visibility="gone"
                                android:layout_marginTop="5dp"
                                android:padding="7dp"
                                android:background="@drawable/rectangle_outer_color"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <Spinner
                                    android:id="@+id/spinner"
                                    android:layout_toLeftOf="@+id/arrowLeave"
                                    android:layout_width="match_parent"
                                    android:backgroundTint="@color/gray"
                                    android:layout_height="wrap_content"/>

                                <ImageView
                                    android:id="@+id/arrowLeave"
                                    android:visibility="gone"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginRight="4dp"/>
                            </RelativeLayout>
                            <TextView
                                android:visibility="gone"
                                android:layout_marginTop="15dp"
                                android:textSize="15dp"
                                android:text="Duration"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:visibility="gone"
                                android:id="@+id/edt_duration"
                                android:hint="Duration"
                                android:inputType="number"
                                android:textColorHint="@color/gray"
                                android:paddingTop="7dp"
                                android:paddingBottom="7dp"
                                android:layout_marginRight="10dp"
                                android:paddingRight="7dp"
                                android:textSize="14dp"
                                android:background="@drawable/line_primary_color"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/gray_dark"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>


                        </LinearLayout>


                        <TextView
                            android:layout_marginTop="15dp"
                            android:textSize="14dp"
                            android:text="@string/titlenote"
                            android:fontFamily="@font/inter_18pt_medium"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <RelativeLayout
                            android:padding="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_marginTop="5dp"
                                android:id="@+id/edt_title"
                                android:hint="Title"
                                android:layout_gravity="start|left"
                                android:gravity="start|left"
                                android:textColorHint="@color/gray"
                                android:paddingTop="7dp"
                                android:paddingBottom="7dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="7dp"
                                android:textSize="14dp"
                                android:background="@drawable/rectangle_outer_gray"
                                android:fontFamily="@font/inter_18pt_medium"
                                android:textColor="@color/gray_dark"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>


                        </RelativeLayout>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:textSize="14dp"
                            android:text="@string/descnotes"
                            android:fontFamily="@font/inter_18pt_medium"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:background="@drawable/rectangle_outer_gray"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/edt_details"
                                android:layout_marginTop="10dp"
                                android:hint="Description"
                                android:lines="10"
                                android:layout_gravity="start|left"
                                android:gravity="start|left"
                                android:textColorHint="@color/gray"
                                android:paddingTop="7dp"
                                android:paddingBottom="7dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="7dp"
                                android:background="@null"
                                android:textSize="14dp"
                                android:fontFamily="@font/inter_18pt_medium"
                                android:textColor="@color/gray_dark"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/mike"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="right"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/microphone"
                                />
                        </LinearLayout>


                        <RelativeLayout
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="30dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal"
                                android:id="@+id/request_layout"
                                android:paddingRight="15dp"
                                android:paddingLeft="15dp"
                                android:backgroundTint="@color/n_green"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:background="@drawable/rectangle_padding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/icon"
                                    app:tint="@color/white"
                                    android:src="@drawable/requesst_icon_new"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"/>
                                <TextView
                                    android:id="@+id/submit_text"
                                    android:text="Save"
                                    android:layout_marginLeft="5dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginRight="5dp"
                                    android:textSize="14dp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal"
                                android:id="@+id/reset_layout"
                                android:layout_toRightOf="@id/request_layout"
                                android:paddingRight="15dp"
                                android:paddingLeft="15dp"
                                android:backgroundTint="@color/n_org"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:background="@drawable/rectangle_padding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/icon1"
                                    app:tint="@color/white"
                                    android:src="@drawable/reset_icon_new"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"/>
                                <TextView
                                     android:text="Reset"
                                    android:layout_marginLeft="5dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginRight="5dp"
                                    android:textSize="14dp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>


                        </RelativeLayout>
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:id="@+id/listLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                     android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="50dp"
                         android:id="@+id/no_data"
                         android:fontFamily="@font/inter_18pt_semibold"
                        android:text="Please add your notes to get started"
                         android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="gone"
                        android:textColor="@color/n_org"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <com.tuyenmonkey.mkloader.MKLoader
            android:id="@+id/loader"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:mk_type="Whirlpool"
            app:mk_color="@color/n_org"
            />




    </LinearLayout>

    <include
        android:id="@+id/bottom_nv"
        layout="@layout/new_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true" />


</RelativeLayout>
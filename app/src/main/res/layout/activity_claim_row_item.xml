<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/mainrv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rectangle_outer_gray">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/date"
                    android:drawableLeft="@drawable/calendar_icon"
                    android:drawablePadding="5dp"
                    android:textSize="12dp"
                     android:layout_gravity="left|center"
                    android:gravity="left|center"
                    android:fontFamily="@font/inter_18pt_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amount"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/amount"
                    android:drawableTint="@color/n_org"
                    android:drawableLeft="@drawable/rupee"
                    android:drawablePadding="5dp"
                    android:textSize="12dp"
                    android:layout_gravity="left|center"
                    android:gravity="left|center"
                    android:fontFamily="@font/inter_18pt_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                     android:layout_weight="2"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:text="Reason"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/reason"
                            android:drawableTint="@color/n_org"
                            android:drawableLeft="@drawable/document_icon"
                            android:drawablePadding="5dp"
                            android:textSize="12dp"
                            android:layout_gravity="left|center"
                            android:gravity="left|center"
                            android:fontFamily="@font/inter_18pt_medium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/see_more"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            app:tint="@color/n_blue"
                            android:padding="5dp"
                            android:rotation="270"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_keyboard_arrow_left_black_24dp">

                        </ImageView>
                    </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:visibility="gone"
                  android:id="@+id/more_layout"

                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/date_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Payment Date"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/pay_date"
                        android:drawableTint="@color/n_org"
                        android:drawableLeft="@drawable/menu_board"
                        android:drawablePadding="5dp"
                        android:textSize="12dp"
                        android:layout_gravity="left|center"
                        android:gravity="left|center"
                        android:fontFamily="@font/inter_18pt_medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                         android:layout_weight="2"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/desc_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pay Description"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/pay_desc"
                        android:layout_width="0dp"
                        android:drawableTint="@color/n_org"
                        android:drawableLeft="@drawable/desc"
                        android:drawablePadding="5dp"
                        android:textSize="12dp"
                        android:layout_gravity="left|center"
                        android:gravity="left|center"
                        android:fontFamily="@font/inter_18pt_medium"
                        android:layout_height="wrap_content"
                         android:layout_weight="2"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/document"
                        android:layout_width="25dp"
                        app:tint="@color/n_blue"
                        android:layout_height="25dp"
                        android:src="@drawable/document_icon"
                        />

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/image_gallery"
                        app:tint="@color/n_blue" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right">


                        <LinearLayout
                            android:id="@+id/edit_dsr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_margin="10dp"
                            android:backgroundTint="@color/n_org"
                            android:background="@drawable/rectangle_padding"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="4dp">

                            <ImageView
                                app:tint="@color/white"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/requesst_icon_new" />

                            <TextView
                                android:fontFamily="@font/inter_18pt_medium"
                                android:drawableTint="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:text="Edit"
                                android:textColor="@color/white"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_margin="10dp"
                android:background="@color/n_outer"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:id="@+id/relativelayout"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                 android:padding="8dp">

                <TextView
                    android:fontFamily="@font/inter_18pt_medium"
                    android:id="@+id/approved_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:text="Approved"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/approve_icon"
                    android:textSize="13dp" />

                <LinearLayout
                    android:id="@+id/request_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/war1"
                    android:background="@drawable/rectangle_padding"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            app:tint="@color/white"

                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/decline_icon" />

                        <TextView
                             android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="Cancel"
                            android:fontFamily="@font/inter_18pt_medium"
                            android:textColor="@color/white"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/approve_layout"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_padding"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/n_green"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_account_circle_24"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/approved_by"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/inter_18pt_medium"
                            android:text="HR"
                            android:textColor="@color/white"
                            android:textSize="12dp" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/shade_yellow"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/n_org"
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <include layout="@layout/activity_network"/>

        <include layout="@layout/activity_common_header"/>
    </LinearLayout>
    <LinearLayout
        android:layout_above="@id/bottomLayout"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:backgroundTint="@color/white"
        android:background="@drawable/padding_overlap"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="115dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:visibility="gone"
            android:drawableLeft="@drawable/calendar_icon_new"
            android:drawableTint="@color/white"
            android:id="@+id/change_layout"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:text=" Claim List"
            android:textColor="@color/white"
            android:padding="5dp"
            android:backgroundTint="@color/n_org"
            android:background="@drawable/rectangle_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
               android:id="@+id/apply_leave_layout"
              android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <LinearLayout
                android:id="@+id/add_layout"
                android:layout_below="@+id/view"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ScrollView
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/linearfromdate"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginTop="15dp"
                                android:textSize="13dp"
                                android:text="Schedule  For *"
                                android:fontFamily="@font/inter_18pt_medium"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:background="@drawable/rectangle_outer_gray"
                                android:orientation="vertical"
                                android:padding="3dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <Spinner
                                    android:padding="6dp"
                                    android:id="@+id/select_for_spinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                             android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginTop="10dp"
                                android:textSize="13dp"
                                android:text="Meeting Title *"
                                android:fontFamily="@font/inter_18pt_medium"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:background="@drawable/rectangle_outer_gray"
                                android:paddingTop="7dp"
                                android:paddingBottom="7dp"
                                android:layout_marginTop="5dp"
                                android:paddingRight="7dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:padding="5dp"
                                    android:inputType="textNoSuggestions|textFilter"
                                    android:id="@+id/edt_meeting"
                                    android:hint="Meeting Name"
                                    android:textColorHint="@color/gray"
                                    android:textSize="13dp"
                                    android:background="@null"
                                    android:fontFamily="@font/inter_18pt_medium"
                                    android:textColor="@color/gray_dark"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/other_layout"
                            android:visibility="gone"
                             android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="15dp"
                             android:textSize="15dp"
                            android:text="Other Name *"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                             android:paddingRight="7dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_marginTop="5dp"
                                android:padding="3dp"
                                android:id="@+id/edt_other"
                                android:inputType="textNoSuggestions|textFilter"
                                android:hint="OtherName"
                                android:textColorHint="@color/gray"
                                android:textSize="14dp"
                                android:background="@drawable/line_primary_color"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/gray_dark"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:textSize="13dp"
                            android:text="Date *"
                            android:fontFamily="@font/inter_18pt_medium"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <RelativeLayout
                            android:padding="4dp"
                            android:background="@drawable/rectangle_outer_gray"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/ed_fromdate"
                                android:focusable="false"
                                android:inputType="textNoSuggestions|textFilter"
                                android:background="@null"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@id/from_picker"
                                android:fontFamily="@font/inter_18pt_medium"
                                android:hint="Date"
                                android:paddingTop="7dp"
                                android:paddingRight="7dp"
                                android:paddingBottom="7dp"
                                android:textColor="@color/gray_dark"
                                android:textColorHint="@color/gray"
                                android:textSize="13dp" />

                            <ImageView
                                android:id="@+id/from_picker"
                                app:tint="@color/n_blue"
                                android:layout_marginRight="2dp"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:src="@drawable/calendar_icon_new" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_marginTop="10dp"
                                    android:textSize="13dp"
                                    android:text="From Time *"
                                    android:fontFamily="@font/inter_18pt_medium"
                                    android:textColor="@color/black"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <RelativeLayout
                                    android:layout_marginRight="8dp"
                                    android:padding="4dp"
                                    android:background="@drawable/rectangle_outer_gray"
                                    android:layout_marginTop="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <EditText
                                        android:id="@+id/ed_fromtime"
                                        android:focusable="false"
                                        android:inputType="textNoSuggestions|textFilter"
                                        android:background="@null"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="10dp"
                                        android:layout_toLeftOf="@id/from_time_picker"
                                        android:fontFamily="@font/inter_18pt_medium"
                                        android:hint="--:--"
                                        android:paddingTop="7dp"
                                        android:paddingLeft="7dp"
                                        android:paddingRight="7dp"
                                        android:paddingBottom="7dp"
                                        android:textColor="@color/gray_dark"
                                        android:textColorHint="@color/gray"
                                        android:textSize="13dp" />

                                    <ImageView
                                        app:tint="@color/n_blue"
                                        android:id="@+id/from_time_picker"
                                        android:layout_width="20dp"
                                        android:layout_height="22dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/clock_icon_new" />
                                </RelativeLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginLeft="8dp"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_marginTop="10dp"
                                    android:textSize="13dp"
                                    android:text="To Time *"
                                    android:fontFamily="@font/inter_18pt_medium"
                                    android:textColor="@color/black"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <RelativeLayout
                                    android:padding="4dp"
                                    android:background="@drawable/rectangle_outer_gray"
                                    android:layout_marginTop="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <EditText
                                        android:id="@+id/ed_totime"
                                        android:inputType="textNoSuggestions|textFilter"

                                        android:focusable="false"
                                        android:background="@null"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="10dp"
                                        android:layout_toLeftOf="@id/to_time_picker"
                                        android:fontFamily="@font/inter_18pt_medium"
                                        android:hint="--:--"
                                        android:paddingLeft="7dp"
                                        android:paddingTop="7dp"
                                        android:paddingRight="7dp"
                                        android:paddingBottom="7dp"
                                        android:textColor="@color/gray_dark"
                                        android:textColorHint="@color/gray"
                                        android:textSize="14dp" />

                                    <ImageView
                                        android:layout_marginRight="2dp"
                                        app:tint="@color/n_blue"
                                        android:id="@+id/to_time_picker"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/clock_icon_new" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:textSize="13dp"
                            android:text="Add Team Members *"
                            android:fontFamily="@font/inter_18pt_medium"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:padding="6dp"
                                android:orientation="vertical"
                                android:background="@drawable/rectangle_outer_gray"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <RelativeLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textSize="13dp"
                                        android:fontFamily="@font/inter_18pt_medium"
                                         android:textColor="@color/black"
                                        android:id="@+id/add_team"
                                         android:text="Add Team Members"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>

                                </RelativeLayout>

                                <Spinner
                                    android:visibility="gone"
                                    android:id="@+id/multipleItemSelectionSpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                      />
                            </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <CheckBox
                                android:id="@+id/checkBox"
                                android:layout_alignParentRight="true"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                            <TextView
                                android:layout_marginLeft="5dp"
                                android:id="@+id/check_all_text"
                                 android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:text="Check All"
                                android:textSize="13dp"
                                android:fontFamily="@font/inter_18pt_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>


                        <TextView
                            android:layout_marginTop="10dp"
                            android:textSize="13dp"
                            android:text="Invite By Email "
                            android:fontFamily="@font/inter_18pt_medium"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:background="@drawable/rectangle_outer_gray"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                             android:paddingRight="7dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:padding="7dp"
                                 android:id="@+id/edt_invite_by_mail"
                                android:hint="Email"
                                android:inputType="textNoSuggestions|textFilter"
                                android:textColorHint="@color/gray"
                                android:textSize="13dp"
                                android:background="@null"
                                android:fontFamily="@font/inter_18pt_medium"
                                android:textColor="@color/gray_dark"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RadioButton
                                android:id="@+id/rdo_online"
                                android:text="Online"
                                android:fontFamily="@font/inter_18pt_medium"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <RadioButton
                                android:id="@+id/rdo_direct"
                                android:text="Direct"
                                android:fontFamily="@font/inter_18pt_medium"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/meeting_link_layout"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginTop="8dp"
                                android:textSize="13dp"
                                android:text="Meeting Link *"
                                android:fontFamily="@font/inter_18pt_medium"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:id="@+id/edt_meeting_link"
                                android:hint="https://example.com"
                                android:inputType="textNoSuggestions|textFilter"
                                android:textColorHint="@color/gray"
                                android:paddingTop="7dp"
                                android:paddingBottom="7dp"
                                android:layout_marginRight="10dp"
                                android:paddingRight="7dp"
                                android:textSize="13dp"
                                android:paddingLeft="7dp"
                                android:background="@drawable/rectangle_outer_gray"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/gray_dark"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/location_layout"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginTop="8dp"
                                android:textSize="13dp"
                                android:text="Location Details *"
                                android:fontFamily="@font/inter_18pt_medium"
                                android:textColor="@color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:id="@+id/edt_location"
                                android:hint="Location"
                                android:inputType="textNoSuggestions|textFilter"
                                android:textColorHint="@color/gray"
                                android:paddingTop="7dp"
                                android:paddingBottom="7dp"
                                android:layout_marginRight="10dp"
                                android:paddingRight="7dp"
                                android:textSize="13dp"
                                android:background="@drawable/rectangle_outer_gray"
                                android:fontFamily="@font/inter_18pt_medium"
                                android:textColor="@color/gray_dark"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>


                         <RelativeLayout
                            android:id="@+id/bottom_request_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="15dp"
                            android:layout_centerInParent="true"
                             android:orientation="horizontal"
                            android:padding="10dp">

                             <LinearLayout
                                 android:layout_marginRight="10dp"
                                 android:orientation="horizontal"
                                 android:id="@+id/request_layout"
                                 android:paddingRight="15dp"
                                 android:paddingLeft="15dp"
                                 android:backgroundTint="@color/n_green"
                                 android:paddingTop="5dp"
                                 android:paddingBottom="5dp"
                                 android:background="@drawable/rectangle_padding"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content">
                                 <ImageView
                                     app:tint="@color/white"
                                     android:id="@+id/icon"
                                     android:src="@drawable/decline_icon"
                                     android:layout_width="20dp"
                                     android:layout_height="20dp"/>
                                 <TextView
                                     android:id="@+id/request_text"
                                     android:text="Apply"
                                     android:layout_marginLeft="5dp"
                                     android:layout_alignParentLeft="true"
                                     android:layout_marginRight="5dp"
                                     android:textSize="14dp"
                                     android:fontFamily="@font/roboto_regular"
                                     android:textColor="@color/white"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"/>
                             </LinearLayout>
                             <LinearLayout
                                 android:layout_marginRight="10dp"
                                 android:orientation="horizontal"
                                 android:id="@+id/reset_layout"
                                 android:layout_toRightOf="@id/request_layout"
                                 android:paddingRight="15dp"
                                 android:paddingLeft="15dp"
                                 android:backgroundTint="@color/n_org"
                                 android:paddingTop="5dp"
                                 android:paddingBottom="5dp"
                                 android:background="@drawable/rectangle_padding"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content">
                                 <ImageView
                                     android:id="@+id/icon1"
                                     app:tint="@color/white"
                                     android:src="@drawable/reset_icon_new"
                                     android:layout_width="20dp"
                                     android:layout_height="20dp"/>
                                 <TextView
                                     android:text="Reset"
                                     android:layout_marginLeft="5dp"
                                     android:layout_alignParentLeft="true"
                                     android:layout_marginRight="5dp"
                                     android:textSize="14dp"
                                     android:fontFamily="@font/roboto_regular"
                                     android:textColor="@color/white"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"/>
                             </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
             android:id="@+id/listLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>
                    <TextView
                        android:id="@+id/no_data"
                        android:visibility="gone"
                        android:text=""
                        android:drawableTop="@drawable/no_data"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/war1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>


    </LinearLayout>
    <com.tuyenmonkey.mkloader.MKLoader
        android:layout_centerInParent="true"
        android:id="@+id/loader"
        android:visibility="gone"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:mk_type="Whirlpool"
        app:mk_color="@color/n_org"
        />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomLayout"
        android:layout_alignParentRight="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/rectangle_padding"
        android:backgroundTint="@color/n_org"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/frame_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/frame_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/add_circle_white"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/frame_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Add Meeting"
                android:textColor="@color/white" />

        </LinearLayout>
    </FrameLayout>


    <LinearLayout
        android:id="@+id/bottomLayout"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/bottom_navigation_bar"/>

        <!-- <com.etebarian.meowbottomnavigation.MeowBottomNavigation
             android:layout_width="match_parent"
             android:id="@+id/btm_nav"
             android:layout_gravity="bottom"
             app:mbn_backgroundBottomColor="@color/purple_200"
             app:mbn_circleColor="@color/black"
             app:mbn_selectedIconColor="@color/white"
             app:mbn_defaultIconColor="@color/white"
             android:layout_height="wrap_content"/>
         <View
             android:background="@color/n_org"
             android:layout_width="match_parent"
             android:layout_height="10dp"/>-->
    </LinearLayout>
</RelativeLayout>
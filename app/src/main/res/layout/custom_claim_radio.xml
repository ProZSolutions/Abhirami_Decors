<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rectiangle_padding"
    android:backgroundTint="@color/white"
     android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:text="Select Claim Type"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/n_blue"
        android:fontFamily="@font/inter_18pt_semibold"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RadioButton
        android:layout_marginLeft="10dp"
        android:layout_below="@id/title"
        android:buttonTint="@color/black"
        android:layout_gravity="left"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_18pt_medium"
        android:id="@+id/rd_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Claim" />

    <RadioButton
        android:layout_marginLeft="10dp"
        android:id="@+id/rd_2"
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:layout_height="wrap_content"
        android:buttonTint="@color/black"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_18pt_medium"
        android:layout_below="@+id/rd_1"
        android:text="Advance Claim" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/approve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rd_2"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rectangle_padding"
        android:backgroundTint="@color/n_green"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/icon"
            app:tint="@color/white"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/approve_icon" />

        <TextView
            android:id="@+id/btn_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Continue"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

    </LinearLayout>
</RelativeLayout>